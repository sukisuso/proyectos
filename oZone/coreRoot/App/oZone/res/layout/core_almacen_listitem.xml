<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content"
	android:layout_width="fill_parent"
	android:orientation="vertical"
	android:background="#B0F7BE81">
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
	    android:id="@+id/nivel"
	    android:layout_height="50dp"
	    android:layout_width="0dp"
	    android:layout_weight=".20"
	    android:gravity="center"
	    android:text="Liv"
	    android:textColor="#2EFE2E"
	    android:textSize="13sp"
	    android:textStyle="bold"
	    android:visibility="visible" />
	
	<TextView
	    android:id="@+id/costeMetal"
	    android:layout_weight=".20"
	    android:layout_width="0dp"
	    android:layout_height="50dp"
	    android:gravity="center"
	    android:text="Liv"
	    android:textColor="#FE9A2E"
	    android:textSize="13sp"
	    android:textStyle="bold"
	    android:visibility="visible" />
	
	<TextView
	    android:id="@+id/costeCristal"
	    android:layout_weight=".20"
	    android:layout_width="0dp"
	    android:layout_height="50dp"
	    android:gravity="center"
	    android:text="Liv"
	    android:textColor="#0000FF"
	    android:textSize="13sp"
	    android:textStyle="bold"
	    android:visibility="visible" />
	
	<TextView
	    android:id="@+id/costeOzone"
	    android:layout_height="50dp"
	    android:layout_width="0dp"
	    android:layout_weight="0.20"
	    android:gravity="center"
	    android:text="Liv"
	    android:textColor="#F7FE2E"
	    android:textSize="13sp"
	    android:textStyle="bold"
	    android:visibility="visible" />

    </LinearLayout>
	
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="20dp" >

        <TextView
	    android:id="@+id/capacidadtitle"
	    android:layout_width="wrap_content"
	    android:layout_height="20dp"
	    android:gravity="center_vertical"
	    android:paddingLeft="20dp"
	    android:text="@string/capacidad"
	    android:textColor="#FFFFFF"
	    android:textSize="13sp"
	    android:textStyle="bold"
	    android:visibility="visible" />
        
        <TextView
	    android:id="@+id/capacidad"
	    android:layout_width="wrap_content"
	    android:layout_height="20dp"
	    android:paddingLeft="30dp"
	    android:gravity="center"
	    android:text="Liv"
	    android:textColor="#FFFFFF"
	    android:textSize="13sp"
	    android:textStyle="bold"
	    android:visibility="visible" />
    </LinearLayout>
	

</LinearLayout>